<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- Profile Picture -->
        <ImageView
            android:id="@+id/profile_image_edit"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/logo"
            android:background="@drawable/round"
            android:scaleType="centerCrop"
            android:layout_marginTop="32dp" />

        <!-- Username -->
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Username"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/primary_color"
            android:layout_marginTop="24dp" />
        <EditText
            android:id="@+id/edit_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/primary_color"
            android:textColor="@color/text_color"
            android:hint="Enter your username"
            android:padding="12dp"
            android:layout_marginTop="4dp"
            android:inputType="textPersonName" />

        <!-- Email -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/primary_color"
            android:layout_marginTop="16dp" />
        <EditText
            android:id="@+id/edit_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/primary_color"
            android:textColor="@color/text_color"
            android:hint="Enter your email"
            android:padding="12dp"
            android:layout_marginTop="4dp"
            android:inputType="textEmailAddress" />

        <!-- Age -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Age"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/primary_color"
            android:layout_marginTop="16dp" />
        <EditText
            android:id="@+id/edit_age"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/primary_color"
            android:textColor="@color/text_color"
            android:hint="Enter your age"
            android:padding="12dp"
            android:layout_marginTop="4dp"
            android:inputType="number" />

        <!-- Gender -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gender"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/primary_color"
            android:layout_marginTop="16dp" />
        <EditText
            android:id="@+id/edit_gender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/primary_color"
            android:textColor="@color/text_color"
            android:hint="Male / Female / Other"
            android:padding="12dp"
            android:layout_marginTop="4dp"
            android:inputType="text" />

        <!-- Password -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Password (optional)"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/primary_color"
            android:layout_marginTop="16dp" />
        <EditText
            android:id="@+id/edit_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/primary_color"
            android:textColor="@color/text_color"
            android:hint="Enter new password"
            android:padding="12dp"
            android:layout_marginTop="4dp"
            android:inputType="textPassword" />

        <!-- Confirm Password -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirm Password"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/primary_color"
            android:layout_marginTop="16dp" />
        <EditText
            android:id="@+id/edit_confirm_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/primary_color"
            android:textColor="@color/text_color"
            android:hint="Confirm new password"
            android:padding="12dp"
            android:layout_marginTop="4dp"
            android:inputType="textPassword" />

        <!-- Skin Type -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Skin Type"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/primary_color"
            android:layout_marginTop="16dp" />
        <EditText
            android:id="@+id/edit_skin_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/primary_color"
            android:textColor="@color/text_color"
            android:hint="e.g. Normal to Dry"
            android:padding="12dp"
            android:layout_marginTop="4dp" />

        <!-- Current Routine -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current Routine"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/primary_color"
            android:layout_marginTop="16dp" />
        <EditText
            android:id="@+id/edit_routine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/primary_color"
            android:textColor="@color/text_color"
            android:hint="Morning/Evening routine"
            android:padding="12dp"
            android:layout_marginTop="4dp"
            android:inputType="textMultiLine"
            android:minLines="3" />

        <!-- Save Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_save_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save Changes"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/background"
            android:backgroundTint="@color/button_color"
            android:layout_marginTop="32dp"
            android:padding="12dp"
            app:cornerRadius="12dp" />

    </LinearLayout>
</ScrollView>
